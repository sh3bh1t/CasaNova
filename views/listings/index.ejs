<% layout("/layouts/boilerplate") %>


    <div id="filters">


        <div class="filter mt-3">
            <i class="fa-solid fa-fire"></i>
            <p>In-Demand</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-person-swimming"></i>
            <p>By Poolside</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-city"></i>
            <p>Iconic Cities</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Historic</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-tents"></i>
            <p>Camping</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-tractor"></i>
            <p>Farms</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-sun"></i>
            <p>Sunny</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-archway"></i>
            <p>Dorms</p>
        </div>
        <div class="filter mt-3">
            <i class="fa-solid fa-tree-city"></i>
            <p>Tree-House</p>
        </div>
        <div class="tax-toggler">
            <div class="form-check form-switch form-check-reverse " id="tax-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display Taxes</label>
            </div>
        </div>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2 mb-2">

        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id  %>" class="listing-link">
                <div class="listing-card card col">
                    <img src="<%= listing.image.url  %>" class="card-img-top" alt="listing_image"
                        style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night &nbsp;&nbsp;
                                <i class="tax-percent">(18% GST)</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("tax-switch");
        taxSwitch.addEventListener("click", () => {
            let taxPercent = document.getElementsByClassName("tax-percent");
            for (tax of taxPercent) {
                if (tax.style.display != "inline") {
                    tax.style.display = "inline";
                } else {
                    tax.style.display = "none";
                }
            }
        });
    </script>