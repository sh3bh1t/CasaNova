<% layout("/layouts/boilerplate") %>

    <div class="row offset-2">
        <div class="col-8">
            <br>
            <h3>Signup for CasaNova</h3>

            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Enter Username :</label>
                    <input type="text" name="username" placeholder="Add a Unique Username" class="form-control"
                        required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Enter your email :</label>
                    <input type="email" name="email" placeholder="enter email" class="form-control"
                        required/>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Create a Password:</label>
                    <input type="password" name="password" placeholder="create a password" class="form-control" />
                </div>
                <button class="btn  btn-outline-secondary mt-3 mb-3">Sign up</button>
        </div>
    </div>